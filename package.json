{
  "name": "learning-management-system",
  "version": "1.0.0",
  "description": "A comprehensive Learning Management System with student and admin features",
  "main": "dist/backend/backend/server-optimized.js",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc -p tsconfig.frontend.json",
    "build:backend": "tsc -p tsconfig.backend.json",
    "start": "npm run build && node dist/backend/backend/server-optimized.js",
    "dev": "npm run build && nodemon --watch src --exec \"npm run build && node dist/backend/backend/server-optimized.js\"",
    "dev:backend": "nodemon --watch src/backend --exec \"npm run build:backend && node dist/backend/backend/server-optimized.js\"",
    "dev:frontend": "tsc -p tsconfig.frontend.json --watch",
    "test": "jasmine --config=jasmine.json --require=ts-node/register",
    "test:watch": "nodemon --watch spec --watch src --ext ts --exec \"npm test\"",
    "pretest": "echo Running tests...",
    "start:safe": "npm test && npm start",
    "dev:safe": "npm test && npm run dev"
  },
  "keywords": [
    "lms",
    "learning",
    "education",
    "courses"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jasmine": "^5.1.13",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "jasmine": "^5.12.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
