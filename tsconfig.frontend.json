{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist/frontend",
    "rootDir": "./src",
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "../types/*": ["types/*"]
    },
    "removeComments": false
  },
  "include": [
    "src/frontend/**/*",
    "src/types/**/*"
  ]
}
